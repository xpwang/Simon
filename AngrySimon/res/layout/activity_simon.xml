<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".SimonActivity" >

    <Button
        android:id="@+id/button_red"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="34dp"
        android:layout_marginTop="26dp"
        android:onClick="redOnClick"
        android:text="Red" />

    <Button
        android:id="@+id/button_blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/button_red"
        android:layout_marginLeft="40dp"
        android:layout_toRightOf="@+id/button_red"
        android:onClick="greenOnClick"
        android:text="Green" />

    <Button
        android:id="@+id/button_green"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/button_red"
        android:layout_below="@+id/button_red"
        android:layout_marginTop="50dp"
        android:onClick="blueOnClick"
        android:text="Blue" />

    <Button
        android:id="@+id/button_yellow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/button_green"
        android:layout_alignBottom="@+id/button_green"
        android:layout_alignLeft="@+id/button_blue"
        android:onClick="yellowOnClick"
        android:text="Yellow" />

    <Button
        android:id="@+id/button_orange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/button_green"
        android:layout_below="@+id/button_green"
        android:layout_marginTop="56dp"
        android:onClick="blackOnClick"
        android:text="Orange" />

    <Button
        android:id="@+id/button_violet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/button_orange"
        android:layout_alignBottom="@+id/button_orange"
        android:layout_alignLeft="@+id/button_yellow"
        android:onClick="pinkOnClick"
        android:text="Violet" />

</RelativeLayout>